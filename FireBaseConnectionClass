import com.google.firebase.database.DataSnapshot;
import com.google.firebase.database.DatabaseError;
import com.google.firebase.database.DatabaseReference;
import com.google.firebase.database.FirebaseDatabase;
import com.google.firebase.database.ValueEventListener;

 public class FireBaseConnection {
 
 public FireBaseConnection(){}
 
       //A link to the firebase root instance
       FirebaseDatabase database = FirebaseDatabase.getInstance();
       //A link to the first child root node on Firebase Database
        DatabaseReference rootRef = database.getReference().child("root");
        //A link to the child node that holds details of all registered schools
        DatabaseReference reg_schools = rootRef.child("reg_schools");
        
    }
